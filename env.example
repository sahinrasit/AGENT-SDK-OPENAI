# IBM Tech Agent Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Model Configuration (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Optional: Environment (default: development)
NODE_ENV=development

# Optional: Server Port (default: 3000)
PORT=3000

# Optional: Enable Tracing (default: true)
ENABLE_TRACING=true

# Optional: Log Level (default: info)
# Options: debug, info, warn, error
LOG_LEVEL=info

# Optional: MCP Filesystem Path (default: ./sample_files)
MCP_FILESYSTEM_PATH=./sample_files

# Optional: WebSocket Configuration
WS_PORT=3001
WS_HOST=localhost

# Optional: Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/ibtech_agent

# Optional: Redis Configuration (for future use)
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring Configuration
# PROMETHEUS_PORT=9090
# LOKI_PORT=3100
