# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Staging Environment
NODE_ENV=staging
PORT=3000

# WebSocket Configuration
WS_PORT=3001
WS_HOST=0.0.0.0

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ibtech_agent_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_password

# Tracing & Monitoring
ENABLE_TRACING=true
LOG_LEVEL=debug
PROMETHEUS_PORT=9090

# Security
JWT_SECRET=staging_jwt_secret_change_me
SESSION_SECRET=staging_session_secret_change_me
CORS_ORIGIN=https://staging.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# MCP Configuration
MCP_FILESYSTEM_PATH=/app/sample_files

# Email Configuration (optional)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
SMTP_FROM=noreply@staging.your-domain.com

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=staging

# Feature Flags
ENABLE_MCP=true
ENABLE_HUMAN_IN_LOOP=true
ENABLE_CONTEXT_MANAGEMENT=true
ENABLE_STREAMING=true
